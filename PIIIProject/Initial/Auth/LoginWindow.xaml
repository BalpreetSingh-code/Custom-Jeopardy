<Window x:Class="PIIIProject.Initial.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Initial.Auth"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400" Background="#000080"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="White"
                Width="350"
                Height="350"
                CornerRadius="5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Login"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0" />
                <TextBlock Text="to get started"
                            FontSize="14"
                            Foreground="Gray"
                            TextAlignment="Center"
                            Margin="0,0,0,20" />

                <TextBox x:Name="LoginEmailTextBox"
                         Width="250"
                         Height="30"
                         Margin="0,5,0,10"
                         Padding="5"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         FontSize="14"
                         Background="White"
                         Foreground="Gray"
                         BorderBrush="LightGray"
                         BorderThickness="1"
                         Text="youremail@gmail.com" />
                <Grid>
                    <PasswordBox x:Name="LoginPasswordTextBox"
                                Width="250"
                                Height="30"
                                 Margin="0,5,0,10"
                                  Padding="5"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                 FontSize="14"
                                Background="White"
                                  BorderBrush="LightGray"
                                   BorderThickness="1"
                                  />
                    <TextBlock x:Name="LoginPasswordPlaceholder"
                                  Text="Password"
                                  IsHitTestVisible="False"
                                   Foreground="Gray"
                                   FontSize="14"
                                   Padding="5"
                                    VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                  Margin="50,5,0,0"/>
                </Grid>


                <TextBlock Text="Forgot Password?"
                            Cursor="Hand"
                            TextAlignment="Center"
                            Margin="0,5,0,15"/>
                <Button x:Name="LoginContinueButton"
                        Content="Continue"
                        Background="#1a52f3"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Padding="20,10"
                        Margin="10"
                        Width="250"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        BorderThickness="0"
                        Click="LoginContinueButton_Click"/>

                <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <TextBlock Text="New User? " Foreground="Gray"/>
                    <TextBlock x:Name="RegisterButton"
                               Text="Register"
                               Foreground="#1a52f3"
                               Cursor="Hand"
                               TextDecorations="Underline"
                               MouseDown="RegisterButton_Click" />
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>