<Window x:Class="PIIIProject.Initial.Auth.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Initial.Auth"
        mc:Ignorable="d"
        Title="Register" Height="500" Width="400" Background="#000080"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="White"
                Width="350"
                Height="400"
                CornerRadius="5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Register"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0" />
                <TextBlock Text="to get started"
                             FontSize="14"
                             Foreground="Gray"
                             TextAlignment="Center"
                             Margin="0,0,0,20" />
                <TextBox x:Name="RegisterUsernameTextBox"
                          Width="250"
                          Height="30"
                          Margin="0,5,0,10"
                          Padding="5"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          FontSize="14"
                         Background="White"
                         Foreground="Gray"
                         BorderBrush="LightGray"
                         BorderThickness="1"
                         Text="Username" />
                <TextBox x:Name="RegisterEmailTextBox"
                        Width="250"
                         Height="30"
                         Margin="0,5,0,10"
                         Padding="5"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         FontSize="14"
                         Background="White"
                         Foreground="Gray"
                         BorderBrush="LightGray"
                         BorderThickness="1"
                         Text="youremail@gmail.com" />
                <Grid>
                    <PasswordBox x:Name="RegisterPasswordTextBox"
                        Width="250"
                        Height="30"
                        Margin="0,5,0,10"
                        Padding="5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        />
                    <TextBlock x:Name="RegisterPasswordPlaceholder"
                            Text="Password"
                            IsHitTestVisible="False"
                            Foreground="Gray"
                            FontSize="14"
                            Padding="5"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="50,5,0,0"/>
                </Grid>
                <Grid>
                    <PasswordBox x:Name="RegisterConfirmPasswordTextBox"
                        Width="250"
                        Height="30"
                        Margin="0,5,0,10"
                        Padding="5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                         />
                    <TextBlock x:Name="RegisterConfirmPasswordPlaceholder"
                            Text="Confirm Password"
                            IsHitTestVisible="False"
                            Foreground="Gray"
                            FontSize="14"
                            Padding="5"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="50,5,0,0"/>
                </Grid>

                <CheckBox x:Name="TermsCheckBox" Content="Agree to Our terms and Conditions"
                            HorizontalAlignment="Left"
                            Margin="20,10,0,15"/>
                <Button x:Name="RegisterContinueButton"
                        Content="Continue"
                        Background="#1a52f3"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Padding="20,10"
                        Width="250"
                         Margin="10"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         BorderThickness="0"
                         Click="RegisterContinueButton_Click"/>

                <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <TextBlock Text="Already registered? " Foreground="Gray"/>
                    <TextBlock x:Name="LoginButton"
                               Text="Login"
                               Foreground="#1a52f3"
                               Cursor="Hand"
                               TextDecorations="Underline"
                               MouseDown="LoginButton_Click" />
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>