<Window x:Class="PIIIProject.Initial.Game.GameSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Initial.Game"
        mc:Ignorable="d"
        Title="Game Setup" Height="300" Width="400" Background="#191970"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Choose your Mode"
                       FontSize="20" FontWeight="Bold" Foreground="White"
                       Margin="0,0,0,20" TextAlignment="Center" />

            <RadioButton x:Name="SinglePlayerRadioButton" Content="Single Player Mode"
                         FontSize="16" Foreground="White" Margin="0,10" FontWeight="Bold"/>
            <RadioButton x:Name="TwoPlayersRadioButton" Content="Two Players Mode"
                         FontSize="16" Foreground="White" Margin="0,10" FontWeight="Bold" />

            <Button x:Name="StartGameButton" Content="START GAME"
                    FontSize="18" FontWeight="Bold" Background="#FFC864" Foreground="Black"
                    Margin="0,20" Padding="10,5"
                    Click="StartGameButton_Click" />
        </StackPanel>
    </Grid>
</Window>
