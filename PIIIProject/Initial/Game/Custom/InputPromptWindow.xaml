<Window x:Class="PIIIProject.Initial.Game.Custom.InputPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category Name"
        Height="200"
        Width="400"
        Background="#2A2B5F"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Prompt Message -->
        <TextBlock x:Name="PromptMessage"
                   FontSize="18"
                   Foreground="White"
                   TextWrapping="Wrap"
                   Grid.Row="0"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

        <!-- Input TextBox -->
        <TextBox x:Name="InputTextBox"
                 FontSize="16"
                 Foreground="Black"
                 Background="White"
                 BorderBrush="#FDBF00"
                 BorderThickness="2"
                 Grid.Row="1"
                 Margin="10,0,10,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="OK"
                    Width="100"
                    Height="40"
                    Background="#FDBF00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Click="OkButton_Click"/>
            <Button Content="Cancel"
                    Width="100"
                    Height="40"
                    Background="#FDBF00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>