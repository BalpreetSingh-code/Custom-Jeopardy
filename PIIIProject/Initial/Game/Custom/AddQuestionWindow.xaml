<Window x:Class="PIIIProject.Initial.Game.Custom.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Questions"
        Height="500"
        Width="500"
        Background="#2A2B5F"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Add/Edit Questions"
                   FontSize="22"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Input Fields -->
        <StackPanel Grid.Row="1" Margin="20">
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Question:" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="QuestionTextBox"/>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Options (comma-separated):" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="OptionsTextBox"/>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Correct Answer Index:" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="CorrectAnswerIndexTextBox"/>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Point Value:" Foreground="White" Margin="0,0,0,5"/>
                <ComboBox x:Name="PointValueComboBox" SelectedIndex="0">
                    <ComboBoxItem Content="200" />
                    <ComboBoxItem Content="400" />
                    <ComboBoxItem Content="600" />
                    <ComboBoxItem Content="800" />
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Questions Dropdown -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,20">
            <TextBlock Text="Select a Question to Edit:" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="QuestionsComboBox"
                      Background="#0050EF"
                      Foreground="Black"
                      FontSize="16"
                      Margin="0,0,0,10"
                      DisplayMemberPath="Text"
                      HorizontalAlignment="Stretch"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Add Question"
                    Width="110"
                    Height="40"
                    Background="#FDBF00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Margin="5,0"
                    Click="AddQuestionButton_Click"/>
            <Button Content="Edit Question"
                    Width="110"
                    Height="40"
                    Background="#FDBF00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Margin="5,0"
                    Click="EditQuestionButton_Click"/>
            <Button Content="Save"
                    Width="110"
                    Height="40"
                    Background="#FDBF00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Margin="5,0"
                    Click="SaveButton_Click"/>
            <Button Content="Cancel"
                    Width="110"
                    Height="40"
                    Background="#FDBF00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Margin="5,0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
