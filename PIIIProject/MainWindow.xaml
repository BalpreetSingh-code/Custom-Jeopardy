<Window x:Class="PIIIProject.Initial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Initial"
        mc:Ignorable="d"
        Title="Start Game" Height="450" Width="800"
        Background="#000080"
        WindowStartupLocation="CenterScreen">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Image to add -->
        <Image Source="pack://application:,,,/Initial/Images/game_image.png"
               Grid.Row="0"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               MaxHeight="500"/>

            <Button x:Name="StartGameButton"
                Grid.Row="1"
                Content="START GAME"
                FontSize="32"
                FontWeight="Bold"
                Background="#FFC864"
                Foreground="Black"
                Padding="40,20"
                BorderThickness="0"
                Margin="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Click="StartGameButton_Click" />

            <StackPanel Grid.Row="2"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Margin="0,10,0,20">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Text="NEW USER? " Foreground="White" />
                    <TextBlock x:Name="RegisterButton"
                           Text="REGISTER"
                           Foreground="#FFC864"
                           Cursor="Hand"
                           TextDecorations="Underline"
                          MouseDown="RegisterButton_Click" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Text="ALREADY A USER? " Foreground="White" />
                    <TextBlock x:Name="SignInButton"
                           Text="SIGN IN"
                           Foreground="#FFC864"
                           Cursor="Hand"
                           TextDecorations="Underline"
                         MouseDown="SignInButton_Click" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Window>

    